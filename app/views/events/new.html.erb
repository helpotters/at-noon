<div class="container">
    <div class="columns is-centered">
        <div class="column form-group is-half">
            <h1 class="title">Make an event</h1>
            <%= form_with model: @event do |f| %>
                <div class="field">
                    <div class="control">
                        <%= f.label :title, class: "label" %>
                        <%= f.text_field :title, autofocus: true, placeholder: "Name of your event", class: "input" %>
                    </div>
                </div>
                <div class="field">
                    <div class="control">
                        <%= f.label :description, class: "label"%>
                        <%= f.text_field :description, placeholder: "What is going on?", class: "input" %>
                    </div>
                </div>
                <div class="field">
                    <div class="control">
                        <%= f.label :start_date %>
                        <%= f.date_select :start_date, class: "input", type: "date" %>
                        <%= f.label :end_date %>
                        <%= f.date_select :end_date, class: "input", type: "date" %>
                    </div>
                </div>
                <%= f.submit "Submit", class: "button is-info" %>
            <% end %>
        </div>
    </div>
</div>
