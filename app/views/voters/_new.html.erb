<div class="section">
    <div class="container">
        <div class="columns is-centered">
            <div class="column form-group is-half">
                <%= form_with model: @voter do |f| %>
                    <div class="field">
                        <div class="control">
                            <%= f.label :name, class: "label" %>
                            <%= f.text_field :name, class:"input", autofocus: true %>
                            <%= f.hidden_field :event_id, value: @event.id %>
                        </div>
                    </div>
                    <%= f.submit "Submit", class: "button is-info" %>
                <% end %>
            </div>
        </div>
    </div>
</div>
