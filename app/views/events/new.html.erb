<section class="section">
    <div class="container">
        <div class="columns is-centered">
            <div class="column form-group is-half">
                <h1 class="title">Make a simple event</h1>
                <%= form_with model: @event do |f| %>
                    <div class="field">
                        <div class="control">
                            <%= f.label :title, class: "label" %>
                            <%= f.text_field :title, autofocus: true, placeholder: "Name of your event", class: "input" %>
                        </div>
                    </div>
                    <div class="field">
                        <div class="control">
                            <%= f.label :description, class: "label"%>
                            <%= f.text_field :description, placeholder: "What is going on?", class: "input" %>
                        </div>
                    </div>
                    <div class="box">
                        <h2 class="subtitle">Pick one and go!</h2>
                        <div class="field">
                            <div class="control">
                                <%= f.hidden_field :start_date, value: Date.today %>
                                <div class="level">
                                    <%= f.button "Create Week Event", name: "event[end_date]", id: "event_end_date", class: "button is-info", type: "date", value: Date.today.end_of_week %>
                                    <span class="icon-text">

                                    </span>
                                    <span class="tag">
                                        <%= (Date.today.end_of_week - Date.today).to_i %> Days
                                    </span>
                                    <span class="tag is-primary"><%= Date.today.strftime("%B, %A") %> - <%= Date.today.end_of_week.strftime("%A") %></span>
                                </div>
                                <div class="level">
                                    <%= f.button "Create Month Event", name: "event[end_date]", id: "event_end_date", class: "button is-info", type: "date", value: Date.today.end_of_month %>
                                    <span class="tag"><%= (Date.today.end_of_month - Date.today).to_i %> Days</span>
                                    <span class="tag is-primary"><%= Date.today.strftime("%B: %d") %> - <%= Date.today.end_of_month.strftime("%d") %></span>
                                </div>
                            </div>
                        </div>
                    </div>
                <% end %>
                <div class="block">

                </div>
                <div class="subtitle">
                    A simple event scheduler to see what days everyone is free. No login, no timeslots. Just send the link and vote.
                </div>
            </div>

        </div>
    </div>
</section>
